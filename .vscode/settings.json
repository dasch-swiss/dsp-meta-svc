{
  "files.insertFinalNewline": true,
  "[svelte]": {
    // this is related to new version of vscode pluggin which now support Prettier, in order to have it working uncomment line 6 and 9
    // some svelte related formatting setting scan be added to .prettierrc.json file
    // "editor.defaultFormatter": "svelte.svelte-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    // "editor.defaultFormatter": "svelte.svelte-vscode",
    "editor.formatOnSave": false
  },
  "[go]": {
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    },
    "editor.suggest.snippetsPreventQuickSuggestions": false,
  },
  "go.formatTool": "gofmt",
  "go.useLanguageServer": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false
}
